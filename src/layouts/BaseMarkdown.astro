---
import Base, { type Props as BaseProps } from "./Base.astro";

interface Props {
  frontmatter: BaseProps;
  children: any;
}

const { frontmatter } = Astro.props;
---

<Base {...frontmatter}>
  <div class="markdown">
    <slot />
  </div>
</Base>

<style lang="scss" is:global>
  // FIXME: globalやめたいけどやり方がわからない
  @use "@/styles/markdown";
</style>
