---
import Base from "@/layouts/Base.astro";
import updateInfos from "public/updateInfos.json";
---

<Base
  title="変更履歴 | VOICEVOX"
  description="VOICEVOXソフトウェアの変更履歴です。"
>
  <section class="section">
    <div class="container is-max-desktop">
      <div class="content">
        <h1 class="title">変更履歴</h1>
        {
          updateInfos.map((info, index) => (
            <>
              <div>
                <h2 class="subtitle is-4">ver {info.version}</h2>
                <ul>
                  {info.descriptions.map((d) => (
                    <li>{d}</li>
                  ))}
                </ul>
                {info.contributors.length > 0 && (
                  <>
                    <h3 class="title is-5">貢献者リスト</h3>
                    <div>{info.contributors.join(" / ")}</div>
                  </>
                )}
              </div>
              {updateInfos.length !== index + 1 && <hr />}
            </>
          ))
        }
      </div>
    </div>
  </section>
</Base>
