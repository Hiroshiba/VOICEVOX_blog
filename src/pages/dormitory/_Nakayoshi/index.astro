---
import { Image } from "astro:assets";

import kiritanImage from "./icon-kiritan.png";
import zunkoImage from "./icon-zunko.png";
import itakoImage from "./icon-itako.png";
---

<div class="root">
  <div>
    <Image src={kiritanImage} alt="東北きりたん" width={128} />
  </div>
  <div>
    <Image src={zunkoImage} alt="東北ずん子" width={128} />
  </div>
  <div>
    <Image src={itakoImage} alt="東北イタコ" width={128} />
  </div>
</div>

<style>
  .root {
    max-width: 300px;
    border-style: solid;

    display: flex;

    > div {
      align-items: center;
      justify-content: center;

      img {
        display: block;
      }
    }
  }
</style>
