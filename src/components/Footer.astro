---
interface Props {
  isDark?: boolean; // Nemoやソングのページかどうか
}

import { faGithub, faXTwitter } from "@fortawesome/free-brands-svg-icons";
import FontAwesomeIcon from "./FontAwesomeIcon.astro";

const { isDark } = Astro.props;
---

<div class={`container is-flex is-justify-content-center`}>
  <a
    class={`button is-small ml-1 mr-1 ${!isDark ? "" : "is-dark"}`}
    href="https://github.com/VOICEVOX/voicevox"
    target="_blank"
    rel="noreferrer"
    type="button"
    role={"button"}
  >
    <span class="icon">
      <FontAwesomeIcon icon={faGithub} />
    </span>
    <span>GitHub</span>
  </a>
  <a
    class={`button is-small ml-1 mr-1 ${!isDark ? "" : "is-dark"}`}
    href="https://x.com/voicevox_pj"
    target="_blank"
    rel="noreferrer"
    type="button"
    role={"button"}
  >
    <span class="icon">
      <FontAwesomeIcon icon={faXTwitter} />
    </span>
    <span>Official SNS</span>
  </a>
</div>
<div class="container is-flex is-justify-content-center mt-2">
  <a
    data-privacy-policy-shower
    class={`is-size-7 ml-1 mr-1 ${isDark ? "has-text-primary" : ""}`}
  >
    {/* TODO: onClick={privacyPolicyShower} */}
    プライバシーポリシー
  </a>
  <p class={`is-size-7	ml-1 mr-1 ${isDark ? "has-text-white-bis" : ""}`}>
    © Hiroshiba Kazuyuki
  </p>
</div>

<script>
  import { $privacyPolicyModal } from "@/store";

  document.addEventListener("astro:page-load", () => {
    document
      .querySelectorAll("[data-privacy-policy-shower]")
      .forEach((elem) => {
        elem.addEventListener("click", () => {
          $privacyPolicyModal.set(true);
        });
      });
  });
</script>
