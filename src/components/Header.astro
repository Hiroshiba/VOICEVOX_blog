const isDark = false;
const isBurgerActive = false;
---

<nav
  class={`navbar is-fixed-top has-shadow ${
    showingHeader ? "" : "is-hidden"
  } ${!showingHeaderOnTop ? "navbar-with-animation" : ""} ${
    isDark ? "is-black" : ""
  }`}
  role="navigation"
  aria-label="main navigation"
>
  <div class="navbar-brand">
    <a href="/" class="navbar-item">
      {/* TODO: <img src={icon} alt="VOICEVOXのロゴ" />*/}
      <span class="has-text-weight-bold is-size-5 pl-2"> VOICEVOX </span>
