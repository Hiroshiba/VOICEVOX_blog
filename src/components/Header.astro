      class={`navbar-burger ${isBurgerActive ? "is-active" : ""}`}
      aria-label="menu"
      aria-expanded="false"
      data-target="navbar"
      {/* TODO: onClick={() => setIsBurgerActive(!isBurgerActive)} */}
    >
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbar" class={`navbar-menu ${isBurgerActive ? "is-active" : ""}`}>
